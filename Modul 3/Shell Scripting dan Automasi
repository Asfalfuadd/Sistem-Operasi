# Prompt terminal

nano tes.sh
#!/bin/bash
echo "Selamat Datang"
ls
ls -l tes.sh
chmod +x tes.sh
./tes.sh
nano prog01.sh
#!/bin/bash
#program shell
var1="Hello World"
echo $var1
chmod +x prog01.sh
./prog01.sh
VPT=UMMETRO
echo $VPT
V1=UM
V2=':'
V3=METRO
V4=$V1$V2$V3
echo $V4
read nama
echo $nama
nano prog02.sh
#!/bin/bash
a=10
b=2
let jumlah=$a+$b;
echo $jumlah
chmod +x prog02.sh
./prog02.sh
sudo apt update
sudo apt install cron
sudo systemctl enable cron
sudo systemctl start cron
crontab -e
*/1 * * * * /home/Pall/test_cron.sh
crontab -e
nano waktu.sh
#!/bin/bash
echo "Waktu Saat Ini: $(date)" >> /home/Pall/hasil.txt
chmod +x waktu.sh
cat hasil.txt
